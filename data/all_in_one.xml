<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="paperformat_check_ca" model="report.paperformat">
            <field name="name">CA check Letter</field>
            <field name="default" eval="False" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>




        <record id="action_print_blank" model="ir.actions.report">
            <field name="name">All in One blank</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">all_in_one_cheque.blank</field>
            <field name="report_file">all_in_one_cheque.blank</field>
            <field name="print_report_name">'check blank - %s' % (object.partner_id.name or '',)</field>
            <field name="paperformat_id" ref="all_in_one_cheque.paperformat_check_ca"/>
            <field name="attachment">'check_'+(object.partner_id.name)+'_'+(object.name)+'_blank.pdf'</field>
            <field name="attachment_use">True</field>
        </record>

    </data>
</odoo>
